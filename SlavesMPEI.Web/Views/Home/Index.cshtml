@model OrderViewModel
<section class="container">
	<div class="col-sm-12 d-sm-flex justify-content-center align-content-center">
		<form asp-area="" asp-controller="Home" asp-action="Index" method="post" asp-antiforgery="true" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Subject" class="form-label p-1 bg-secondary rounded text-white"></label>
				<input asp-for="Subject" class="form-control"/>
			</div>
			<div class="form-group">
				<label asp-for="ProgLang" class="form-label p-1 bg-secondary rounded text-white"></label>
				<select asp-for="ProgLang" asp-items="Html.GetEnumSelectList<ProgLang>()" class="form-control"></select>
			</div>
			<div class="form-group">
				<label asp-for="Task" class="form-label p-1 bg-secondary rounded text-white"></label>
				<textarea asp-for="Task" class="form-control"></textarea>
			</div>
			<div class="form-group">
				<label asp-for="DeadLine"class="form-label p-1 bg-secondary rounded text-white"></label>
				<input asp-for="DeadLine" class="form-control"/>
				<span asp-validation-for="DeadLine"></span>
			</div>
			<div class="form-group">
				<label asp-for="Image" class="form-label p-1 bg-secondary rounded text-white"></label>
				<input asp-for="Image"class="form-control-file btn btn-light"/>
			</div>
			<div class="form-group">
				<input type="submit" value="Сохранить" class="btn btn-outline-light w-100" />
			</div>
		</form>
	</div>
</section>